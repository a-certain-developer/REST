{
  "name": "REST",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^2.12.0",
    "@sap-cloud-sdk/util": "^2.12.0",
    "@sap/cds": "^6",
    "@sap/low-code-event-handler": "^1.1.1",
    "@sap/xsenv": "^3.4.0",
    "@sap/xssec": "^3.2.14",
    "express": "^4",
    "hdb": "^0.19.5",
    "passport": "^0.6.0",
    "@sap/mdk-tools": "^1.3.1"
  },
  "devDependencies": {
    "sqlite3": "^5.0.4"
  },
  "scripts": {
    "start": "cds run"
  },
  "engines": {
    "node": "^16.15"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana-cloud"
        }
      },
      "db": {
        "kind": "sql"
      },

      "auth": {
        "kind": "xsuaa"
      },
      "Bank_Read": {
        "kind": "odata-v2",
        "model": "srv/external/Bank_Read",
        "[production]": {
          "credentials": {
            "destination": "apihub_sandbox",
            "path": "s4hanacloud/sap/opu/odata/sap/API_BANKDETAIL_SRV"
          }
        }
      },
      "Bills": {
        "kind": "rest",
        "model": "srv/external/BillsV2",
        "impl": "srv/external/BillsV2.js",

        "credentials": {
          "destination": "apihub_sandbox",
          "path": "subscriptionbilling/api/bill/v2/bills"

        }
    }
  }

    },

  "lcap": true
}